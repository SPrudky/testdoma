<Window x:Class="testdoma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testdoma"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>


        <TextBox x:Name="txtbox1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Height="270" Grid.ColumnSpan="2" FontSize="24" />
        <Button x:Name="GO" Content="GO" HorizontalAlignment="Left" Margin="10,335,0,0" VerticalAlignment="Top" Height="89" Width="186" Click="Button_Click" FontSize="36"/>
        <Button x:Name="refuel" Content="Refuel" HorizontalAlignment="Left" Margin="201,335,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="89" Width="186" FontSize="36" Click="refuel_Click"/>
        <Button x:Name="load" Content="Load" HorizontalAlignment="Left" Margin="400,335,0,0" VerticalAlignment="Top" Height="89" Width="186" FontSize="36" Click="load_Click"/>
        <Button x:Name="unload" Content="Unload" Margin="611,335,10,10" FontSize="36" Click="unload_Click"/>

    </Grid>
</Window>
